{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": ["src", "../../core/src/utils"],
  "compilerOptions": {
    "module": "Node16",
    "target": "ESNext",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "."
  }
}
